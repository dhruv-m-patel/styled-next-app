{
  "name": "styled-next-app",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build-storybook": "build-storybook -s public/",
    "start": "next start",
    "storybook": "start-storybook -p 6001",
    "lint": "next lint",
    "prettier:format": "prettier --write .",
    "prettier:verify": "prettier --check .",
    "test": "jest --runInBand",
    "test:ci": "jest --silent --ci --coverage --coverageReporters=text --coverageReporters=text-summary"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "6.4.9",
    "@storybook/addon-actions": "6.4.9",
    "@storybook/addon-essentials": "6.4.9",
    "@storybook/addon-links": "6.4.9",
    "@storybook/react": "6.4.9",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.23",
    "@types/node": "17.0.6",
    "@types/react": "17.0.38",
    "@types/styled-components": "^5.1.23",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^2.0.3",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^6.0.0",
    "jest": "27.0.5",
    "lint-staged": "^11.0.0",
    "next-router-mock": "^0.6.5",
    "prettier": "^2.3.2",
    "react-test-renderer": "^16.14.0",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint ."
    ]
  }
}
